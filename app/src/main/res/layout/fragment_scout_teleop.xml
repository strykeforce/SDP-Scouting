<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#292929">

    <TextView
        android:id="@+id/TeleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teleop"
        android:textSize="60sp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/ConeCouters"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="20dp"

        >

        <TextView
            android:id="@+id/cones"
            android:layout_width="111dp"
            android:layout_height="42dp"
            android:text="Cones"
            android:textSize="35sp"
            android:textColor="#FFFFFF"
            android:gravity="center_horizontal|top" />

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingCounterView
            android:id="@+id/ConeTop"
            android:layout_width="440dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:background="#D9D9D9"
            android:orientation="vertical"
            app:key="tele_top_cones" />

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingCounterView
            android:id="@+id/ConeMiddle"
            android:layout_width="440dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="#D9D9D9"
            android:orientation="vertical"
            app:key="tele_middle_cones"/>

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingCounterView
            android:id="@+id/ConeBottom"
            android:layout_width="440dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="#D9D9D9"
            android:orientation="vertical"
            app:key="tele_bottom_cones"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="95dp"
        >
        <TextView
            android:id="@+id/top"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:text="Top"
            android:textSize="35sp"
            android:textColor="#FFFFFF"
            android:gravity="center_horizontal|center_vertical"

            />

        <TextView
            android:id="@+id/middle"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:text="Middle"
            android:textSize="35sp"
            android:textColor="#FFFFFF"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginTop="50dp"
            />

        <TextView
            android:id="@+id/bottom"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:text="Bottom"
            android:textSize="35sp"
            android:textColor="#FFFFFF"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginTop="50dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/CubeCouters"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        android:layout_alignParentEnd="true"
        >
        <TextView
            android:id="@+id/cubes"
            android:layout_width="111dp"
            android:layout_height="42dp"
            android:text="Cubes"
            android:textSize="35sp"
            android:textColor="#FFFFFF"
            android:gravity="center_horizontal|top"
            />

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingCounterView
            android:id="@+id/CubesTop"
            android:layout_width="440dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:background="#D9D9D9"
            android:orientation="vertical"
            app:key="tele_top_cubes"/>

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingCounterView
            android:id="@+id/CubesMiddle"
            android:layout_width="440dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="#D9D9D9"
            android:orientation="vertical"
            app:key="tele_middle_cubes"/>

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingCounterView
            android:id="@+id/CubesBottom"
            android:layout_width="440dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="#D9D9D9"
            android:orientation="vertical"
            app:key="tele_bottom_cubes"/>

    </LinearLayout>

</RelativeLayout>