<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#292929">

    <TextView
        android:id="@+id/TeleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teleop"
        android:textSize="60sp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/MadeMissed"
        android:layout_width="440dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp">

    </LinearLayout>


    <LinearLayout
        android:id="@+id/Amps"
        android:layout_width="440dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"

        >

        <TextView
            android:id="@+id/amps_made"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginTop="76dp"
            android:text="Amp"
            android:textSize="35sp"
            android:textColor="#FFFFFF"
            android:gravity="center_horizontal|top" />

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingCounterView
            android:id="@+id/MadeAmps"
            android:layout_width="440dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#D9D9D9"
            android:orientation="vertical"
            app:key="tele_made_amp"
            />

        <TextView
            android:id="@+id/PassesText"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="Passes"
            android:textSize="35sp"
            android:textColor="#FFFFFF"
            android:gravity="center_horizontal|top"
            android:layout_marginTop="20dp"
            />

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingCounterView
            android:id="@+id/PassCounter"
            android:layout_width="440dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#D9D9D9"
            android:orientation="vertical"
            app:key="tele_passes" />
/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/Speaker"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_alignParentEnd="true"
        android:paddingBottom="25dp"
        android:background="@drawable/outline_background"
        >
        <TextView
            android:id="@+id/SpeakerText"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="Speaker"
            android:textSize="35sp"
            android:textColor="#FFFFFF"
            android:gravity="center_horizontal|top"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Made"
            android:layout_marginTop="40dp"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"/>

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingCounterView
            android:id="@+id/Speaker_Made"
            android:layout_width="440dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#D9D9D9"
            android:orientation="vertical"
            app:key="tele_made_speaker"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Missed"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            />

        <org.wildstang.wildrank.androidv2.views.scouting.ScoutingCounterView
            android:id="@+id/Speaker_Missed"
            android:layout_width="440dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#D9D9D9"
            android:orientation="vertical"
            app:key="tele_missed_speaker"
            />
    </LinearLayout>




</RelativeLayout>